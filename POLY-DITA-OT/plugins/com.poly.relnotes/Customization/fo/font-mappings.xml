<!-- Updated to reflect WD fonts, HelveticaNeue -->
<font-mappings>
  <font-table>
    
    <!-- Backwards compatibility aliases -->
   
    <aliases>
      <alias name="monospace">Monospaced</alias>
    </aliases>
    <aliases>
      <alias name="Courier">Monospaced</alias>
    </aliases>
    <aliases>
      <alias name="Arial">Arial</alias>
    </aliases>
    <aliases>
      <alias name="Sans">Arial</alias>
    </aliases>
    <aliases>
      <alias name="sans-serif">Arial</alias>
    </aliases>
    
    <logical-font name="Arial"> 
      <physical-font char-set="default">
        <font-face>Arial, Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Simplified Chinese">
        <font-face>Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Traditional Chinese">
        <font-face>Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Japanese">
        <font-face>Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Korean">
        <font-face>Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Symbols">
        <font-face>Polycom-Unified-Meeting-Experience, ZapfDingbats, Arial, Arial Unicode MS</font-face>
      </physical-font>
      <physical-font char-set="SymbolsSuperscript">
        <font-face>Arial Unicode MS</font-face>
        <baseline-shift>20%</baseline-shift>
        <override-size>smaller</override-size>
      </physical-font>
    </logical-font>       

    <logical-font name="Monospaced">
      <physical-font char-set="default">
        <font-face>Courier New, Courier, Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Simplified Chinese">
        <font-face>Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Traditional Chinese">
        <font-face>Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Japanese">
        <font-face>Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Korean">
        <font-face>Arial Unicode MS, Polycom-Unified-Meeting-Experience</font-face>
      </physical-font>
      <physical-font char-set="Symbols">
        <font-face>Polycom-Unified-Meeting-Experience, ZapfDingbats, Arial Unicode MS</font-face>
      </physical-font>
      <physical-font char-set="SymbolsSuperscript">
        <font-face>Polycom-Unified-Meeting-Experience, Courier New, Courier, Arial, Arial Unicode MS</font-face>
        <baseline-shift>20%</baseline-shift>
        <override-size>smaller</override-size>
      </physical-font>
    </logical-font>
  </font-table>

</font-mappings>
